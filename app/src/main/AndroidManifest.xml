<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jamesholliday.mydiary02">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="MyDiary"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyDiary02">
        <activity android:name="activities.ShowActivity"></activity>
        <activity android:name="activities.EditActivity" />
        <activity android:name="activities.BooksActivity" />
        <activity android:name="activities.LettersActivity" />
        <activity android:name="activities.ThoughtsActivity" />
        <activity android:name="activities.DiaryActivity" />
        <activity android:name="activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>